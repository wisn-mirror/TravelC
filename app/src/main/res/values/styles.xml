<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/img_splash_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="radiobutton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@drawable/app_radiobutton_bottom_textcolor</item>
        <item name="drawableSizes">36dp</item>
        <item name="tipTextRedius">7dp</item>
        <item name="tipRediusMarginTop">8dp</item>
        <item name="tipRediusMarginRight">8dp</item>
        <item name="tipBackground">@color/mainColor</item>
        <item name="tipTextColor">#ffffff</item>
        <item name="tipRedius">4dp</item>
        <item name="tipTextSize">7dp</item>
    </style>
</resources>
