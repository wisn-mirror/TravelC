<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_title_rl"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/common_back_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/icon_return"
        android:padding="15dp" />

    <LinearLayout
        android:id="@+id/common_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/common_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:maxWidth="200dp"
            android:textColor="@color/titlebg"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/common_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:padding="12dp" />

    <View
        android:id="@+id/common_divier_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#fff0f0f0" />
</RelativeLayout>
