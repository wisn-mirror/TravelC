<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/shopcart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:maxWidth="200dp"
            android:textColor="@color/titlebg"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/shopcart_item_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopcart_item_name"
            android:layout_marginLeft="15dp"
            android:textColor="@color/shopcart_des_color"
            android:textSize="12sp"
            android:visibility="gone" />

        <com.travel.library.view.widget.ShoppingCountView
            android:id="@+id/shopcart_item_coutview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:scv_add_btn_bg_color="@color/colorPrimary"
            app:scv_add_btn_text_color="@color/white"
            app:scv_minus_btn_bg_color="#eee"
            app:scv_minus_btn_text_color="@color/titlebg"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/shopcart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/shopcart_item_coutview"
            android:layout_toRightOf="@+id/shopcart_item_name"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>