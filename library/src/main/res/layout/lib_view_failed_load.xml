<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_notdataH5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f0f0"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_failed"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_above="@+id/tv_noconnect"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/lib_failed_to_load" />

    <TextView
        android:id="@+id/tv_noconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="网络无法连接"
        android:textColor="#333333"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_faild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_noconnect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="请再次刷新或者检查网路连接"
        android:textColor="#808080"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_faild"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lib_shape_rectangle"
        android:gravity="center"
        android:minWidth="60dp"
        android:text="刷新"
        android:textColor="#333333"
        android:textSize="15dp" />

</RelativeLayout>
